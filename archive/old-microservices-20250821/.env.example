# =============================================================================
# OPSCONDUCTOR MICROSERVICES - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values for your environment

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_TIMEOUT_MINUTES=480
SESSION_WARNING_MINUTES=2

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
REACT_APP_API_URL=http://localhost:8080/api
REACT_APP_AUTH_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:8080/ws

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Auth Service Database
AUTH_POSTGRES_DB=auth_db
AUTH_POSTGRES_USER=auth_user
AUTH_POSTGRES_PASSWORD=auth_password

# User Service Database
USER_POSTGRES_DB=user_db
USER_POSTGRES_USER=user_user
USER_POSTGRES_PASSWORD=user_password

# Universal Targets Database
TARGETS_POSTGRES_DB=targets_db
TARGETS_POSTGRES_USER=targets_user
TARGETS_POSTGRES_PASSWORD=targets_password

# Job Management Database
JOB_MANAGEMENT_POSTGRES_DB=job_management
JOB_MANAGEMENT_POSTGRES_USER=postgres
JOB_MANAGEMENT_POSTGRES_PASSWORD=postgres

# Job Execution Database
JOB_EXECUTION_POSTGRES_DB=job_execution
JOB_EXECUTION_POSTGRES_USER=postgres
JOB_EXECUTION_POSTGRES_PASSWORD=postgres

# Job Scheduling Database
JOB_SCHEDULING_POSTGRES_DB=job_scheduling
JOB_SCHEDULING_POSTGRES_USER=postgres
JOB_SCHEDULING_POSTGRES_PASSWORD=postgres

# Audit Events Database
AUDIT_EVENTS_POSTGRES_DB=audit_events
AUDIT_EVENTS_POSTGRES_USER=postgres
AUDIT_EVENTS_POSTGRES_PASSWORD=postgres

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# =============================================================================
# SERVICE URLS (Internal Communication)
# =============================================================================
AUTH_SERVICE_URL=http://auth-service:8000
USER_SERVICE_URL=http://user-service:8000
TARGETS_SERVICE_URL=http://universal-targets-service:3001
JOB_MANAGEMENT_SERVICE_URL=http://job-management-service:8001
JOB_EXECUTION_SERVICE_URL=http://job-execution-service:8002
JOB_SCHEDULING_SERVICE_URL=http://job-scheduling-service:8003
AUDIT_EVENTS_SERVICE_URL=http://audit-events-service:8004

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================
API_GATEWAY_PORT=8080
API_GATEWAY_SSL_PORT=8443

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=true

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_CONCURRENT_TARGETS=10
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=300
ENABLE_RETRY=true
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080