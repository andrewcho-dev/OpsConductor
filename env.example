# =============================================================================
# OPSCONDUCTOR - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and customize for your environment

# Environment Type
ENVIRONMENT=development

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
POSTGRES_DB=opsconductor_dev
POSTGRES_USER=opsconductor
POSTGRES_PASSWORD=opsconductor_secure_password_2024
POSTGRES_PORT=5432
DATABASE_URL=postgresql://opsconductor:opsconductor_secure_password_2024@postgres:5432/opsconductor_dev

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_URL=redis://redis:6379
REDIS_PORT=6379

# =============================================================================
# SECURITY - JWT & Authentication
# =============================================================================
SECRET_KEY=opsconductor-dev-secret-key-2024-super-secure
JWT_SECRET_KEY=opsconductor-dev-jwt-secret-2024-super-secure
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# NETWORK - Ports & CORS
# =============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
CORS_ORIGINS=*

# =============================================================================
# FRONTEND - React App Configuration
# =============================================================================
REACT_APP_API_URL=/api
REACT_APP_WS_URL=/ws

# =============================================================================
# JOB EXECUTION - Performance Settings
# =============================================================================
MAX_CONCURRENT_TARGETS=20
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=300

# =============================================================================
# RETRY LOGIC - Error Handling
# =============================================================================
ENABLE_RETRY=false
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2.0

# SMTP Configuration for Email Notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
SMTP_USE_SSL=false 