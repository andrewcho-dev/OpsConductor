# Job Execution Service Environment Configuration

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
JOB_POSTGRES_DB=job_execution_db
JOB_POSTGRES_USER=job_user
JOB_POSTGRES_PASSWORD=job_password_secure_123

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
TARGET_SERVICE_URL=http://backend:8000
USER_SERVICE_URL=http://user-service:8000
AUTH_SERVICE_URL=http://auth-service:8000
NOTIFICATION_SERVICE_URL=http://backend:8000

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
JWT_ALGORITHM=HS256

# =============================================================================
# EXECUTION CONFIGURATION
# =============================================================================
MAX_CONCURRENT_TARGETS=10
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=300
ENABLE_RETRY=true
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# =============================================================================
# MONITORING
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090