# OPSCONDUCTOR Production Environment Configuration

# Domain Configuration
DOMAIN_NAME=your-domain.com

# Database Configuration
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://opsconductor:your-secure-postgres-password-here@postgres:5432/opsconductor

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:your-secure-redis-password-here@redis:6379/0

# Application Security
SECRET_KEY=your-very-secure-secret-key-here-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-here-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Email Configuration (Optional)
SMTP_HOST=smtp.your-domain.com
SMTP_PORT=587
SMTP_USERNAME=noreply@your-domain.com
SMTP_PASSWORD=your-smtp-password
SMTP_TLS=true

# External Services (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
TEAMS_WEBHOOK_URL=https://your-org.webhook.office.com/webhookb2/YOUR-TEAMS-WEBHOOK

# Security Settings
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# File Upload
MAX_UPLOAD_SIZE=100MB
UPLOAD_PATH=/app/uploads

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_REGION=us-east-1

# Monitoring & Alerting
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
ALERT_EMAIL=admin@your-domain.com
ALERT_SLACK_CHANNEL=#alerts

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1000
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
CACHE_TTL_DEFAULT=300
CACHE_TTL_LONG=3600

# Feature Flags
FEATURE_DISCOVERY_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_AUDIT_ENABLED=true
FEATURE_MONITORING_ENABLED=true
FEATURE_SECURITY_ENABLED=true