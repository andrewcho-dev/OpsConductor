# =============================================================================
# OPSCONDUCTOR - PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================

# Environment Type
ENVIRONMENT=production

# =============================================================================
# DATABASE - PostgreSQL
# =============================================================================
POSTGRES_DB=opsconductor_prod
POSTGRES_USER=opsconductor
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD_2024
POSTGRES_PORT=5432
DATABASE_URL=postgresql://opsconductor:CHANGE_ME_SECURE_PASSWORD_2024@postgres:5432/opsconductor_prod

# =============================================================================
# CACHE - Redis
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_2024
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD_2024@redis:6379/0
REDIS_PORT=6379

# =============================================================================
# SECURITY - JWT & Authentication
# =============================================================================
SECRET_KEY=CHANGE_ME_PRODUCTION_SECRET_KEY_2024
JWT_SECRET_KEY=CHANGE_ME_PRODUCTION_JWT_SECRET_2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# NETWORK - Ports & CORS (HTTPS ONLY)
# =============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=8000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443
CORS_ORIGINS=https://your-domain.com

# =============================================================================
# FRONTEND - React App Configuration (RELATIVE URLS ONLY)
# =============================================================================
REACT_APP_API_URL=/api
REACT_APP_WS_URL=/ws

# =============================================================================
# JOB EXECUTION - Performance Settings
# =============================================================================
MAX_CONCURRENT_TARGETS=50
CONNECTION_TIMEOUT=30
COMMAND_TIMEOUT=300

# =============================================================================
# RETRY LOGIC - Error Handling
# =============================================================================
ENABLE_RETRY=true
MAX_RETRIES=3
RETRY_BACKOFF_BASE=2.0

# =============================================================================
# MONITORING - Grafana & Prometheus
# =============================================================================
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD_2024

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN_NAME=your-domain.com